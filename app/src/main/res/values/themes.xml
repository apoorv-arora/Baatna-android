<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="ZomatoActionBarThemeBase" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/baatna_primary_dark</item>
        <item name="colorPrimaryDark">@color/baatna_primary_dark</item>
        <item name="colorAccent">@color/baatna_primary_dark</item>
    </style>

    <style name="ZomatoActionBarThemeApp" parent="@style/ZomatoActionBarThemeBase">
        <item name="colorPrimary">@color/baatna_primary_dark</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="colorPrimaryDark">@color/baatna_primary_dark</item>
        <item name="colorAccent">@color/baatna_primary_dark</item>
    </style>


    <style name="ZomatoThemeNoTitleBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>

        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="ZomatoActionBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>

        <item name="colorPrimary">@color/green_gradient</item>
        <item name="colorPrimaryDark">@color/green_gradient</item>


    </style>
    
    <style name="ZomatoMessageTheme" parent="ZomatoHomeBaseTheme">

        <item name="colorPrimary">@color/white</item>

    </style>

    <style name="ZomatoActionBarThemeDefault" parent="android:Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/ZomatoActionBarDefault</item>
        <item name="android:actionBarTabStyle">@style/ZomatoActionBarTabs</item>
        <item name="android:actionBarDivider">@null</item>
        <item name="android:homeAsUpIndicator">@drawable/backarrow_androiddb</item>
    </style>

    <style name="ZomatoActionBarHome" parent="android:Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/action_bar_default</item>
        <item name="android:height">@dimen/height60</item>
        <item name="android:displayOptions">showCustom</item>
        <item name="android:backgroundStacked">@color/white</item>
    </style>

    <style name="ZomatoActionBar" parent="android:Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/action_bar_default</item>
        <item name="android:height">@dimen/height60</item>
        <item name="android:displayOptions">showCustom</item>
        <item name="android:backgroundStacked">@color/white</item>
        <item name="android:titleTextStyle">@style/myTheme.ActionBar.Text</item>
    </style>

    <style name="ZomatoMessageBar" parent="android:Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/white</item>
        <item name="android:height">@dimen/height60</item>
        <item name="android:displayOptions">showCustom</item>
        <item name="android:backgroundStacked">@color/white</item>
        <item name="android:titleTextStyle">@style/myTheme.ActionBar.Text</item>
    </style>

    <style name="myTheme.ActionBar.Text" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ZomatoActionBarTabs" parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">@drawable/actionbar_tab_indicator</item>
    </style>

    <style name="SpinnerItem_example" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:textColor">@color/zdhl5</item>
        <item name="android:textSize">@dimen/size13</item>
    </style>

    <style name="ZomatoActionBarDefault" parent="android:Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/zomato_darker</item>
        <item name="android:height">@dimen/height48</item>
        <item name="android:displayOptions">showCustom</item>
        <item name="android:backgroundStacked">@color/zhl</item>
    </style>

    <style name="ZomatoActionBarHomeTheme" parent="@style/ZomatoHomeBaseTheme">
        <item name="colorPrimary">@color/action_bar_default</item>
    </style>

    <style name="ZomatoHomeBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/action_bar_default</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:actionBarDivider">@null</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="actionMenuTextColor">@color/white</item>
    </style>

    <style name="ToolbarBaseTheme" parent="Theme.AppCompat">
        <item name="android:background">@color/action_bar_default</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:height">@dimen/height60</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="actionMenuTextColor">@color/white</item>
    </style>
    
     <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
        <item name="thickness">@dimen/thickness</item>
        <item name="barSize">@dimen/barSize</item>
        <item name="gapBetweenBars">@dimen/gapBetweenBars</item>
        <item name="topBottomBarArrowSize">@dimen/topBottomBarArrowSize</item>
        <item name="middleBarArrowSize">@dimen/middleBarArrowSize</item>
        <item name="drawableSize">@dimen/drawableSize</item>
    </style>
    
</resources>