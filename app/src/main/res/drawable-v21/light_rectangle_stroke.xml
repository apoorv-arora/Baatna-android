<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/zhl_dark" >

    <item android:id="@android:id/mask">
        <shape android:shape="rectangle" >
            <solid android:color="@color/zhl" /> <!-- state pressed -->
            <stroke
                android:width="1dp"
                android:color="@color/light_stroke_color" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle" >
            <solid android:color="@color/white" /> <!-- default/unchecked -->
            <stroke
                android:width="1dp"
                android:color="@color/light_stroke_color" />
        </shape>
    </item>

</ripple>