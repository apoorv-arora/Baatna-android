<selector xmlns:android="http://schemas.android.com/apk/res/android"> 
    
    
    <!-- Non focused states -->
    <item android:drawable="@color/transparent1" android:state_focused="false" android:state_pressed="false" android:state_selected="false"/>
    <item android:drawable="@drawable/tab_selected_zomato" android:state_focused="false" android:state_pressed="false" android:state_selected="true"/>

    <!-- Focused states -->
    <item android:drawable="@drawable/tab_unselected_focused_zomato" android:state_focused="true" android:state_pressed="false" android:state_selected="false"/>
    <item android:drawable="@drawable/tab_selected_focused_zomato" android:state_focused="true" android:state_pressed="false" android:state_selected="true"/>

    <!-- Pressed -->

    <!-- Non focused states -->
    <item android:drawable="@drawable/tab_unselected_pressed_zomato" android:state_focused="false" android:state_pressed="true" android:state_selected="false"/>
    <item android:drawable="@drawable/tab_selected_pressed_zomato" android:state_focused="false" android:state_pressed="true" android:state_selected="true"/>

    <!-- Focused states -->

    <item android:drawable="@drawable/tab_unselected_pressed_zomato" android:state_focused="true" android:state_pressed="true" android:state_selected="false"/>
    <item android:drawable="@drawable/tab_selected_pressed_zomato" android:state_focused="true" android:state_pressed="true" android:state_selected="true"/>

</selector><!--
