<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mapFrame"
    android:background="@color/zhl"
    android:clickable="true"
    android:orientation="vertical" >

    <com.google.android.gms.maps.MapView
        android:id="@+id/search_map"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/height125" 
        android:layout_below="@+id/make_request_container"/>
    
    <RelativeLayout 
        android:id="@id/make_request_container"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/height60"
        android:background="@drawable/green_gradient"
        android:layout_alignParentLeft="true"
        >
        <com.application.baatna.utils.IconView
            android:id="@+id/request_icon"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="F"
            android:textSize="@dimen/font_size45"
            />
        <com.application.baatna.utils.TextViewSemiBold 
            android:id="@+id/make_request_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="@string/make_new_request"
            android:textSize="@dimen/size14"
            android:textColor="@color/white"
            android:textAllCaps="true"
            android:letterSpacing=".1"
            />
        
    </RelativeLayout>
    
    <View
        android:layout_below="@id/search_map"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/white"/>
    
</RelativeLayout>